<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a la Clínica"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/buttonRegistroPaciente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Paciente"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"/>

    <Button
        android:id="@+id/buttonRegistroMedico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Médico"
        app:layout_constraintTop_toBottomOf="@id/buttonRegistroPaciente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"/>
    <Button
        android:id="@+id/buttonListaPacientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista de Pacientes"
        app:layout_constraintTop_toBottomOf="@id/buttonRegistroMedico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp" />

    <Button
        android:id="@+id/buttonListaMedicos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista de Medicos"
        app:layout_constraintTop_toBottomOf="@id/buttonListaPacientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp" />
    <Button
        android:id="@+id/buttonAsignarConsulta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Asignar Consultas"
        app:layout_constraintTop_toBottomOf="@id/buttonListaMedicos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp" />
    <Button
        android:id="@+id/buttonHistorialPaciente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Historial De Pacientes"
        app:layout_constraintTop_toBottomOf="@id/buttonAsignarConsulta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp" />
    <Button
        android:id="@+id/buttonConsultasMedico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consultas De citas por medico"
        app:layout_constraintTop_toBottomOf="@id/buttonHistorialPaciente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp" />






</androidx.constraintlayout.widget.ConstraintLayout>
